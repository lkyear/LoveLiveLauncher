<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Material.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="WorkspaceTheme" parent="@android:style/Theme.DeviceDefault.Wallpaper.NoTitleBar">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:windowEnableSplitTouch">false</item>
        <item name="android:splitMotionEvents">false</item>
    </style>

    <style name="CommonActivityTheme" parent="@android:style/Theme.Material.Light" >
        <item name="android:windowContentTransitions">true</item>
        <item name="android:navigationBarColor">@color/colorPrimary</item>
        <item name="android:colorPrimary">@color/colorPrimary</item>
        <item name="android:colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:colorAccent">@color/colorAccent</item>
    </style>

    <style name="PreferenceActivityTheme" parent="Theme.AppCompat.Light" >
        <item name="android:windowContentTransitions">true</item>
        <item name="android:navigationBarColor">@color/colorPrimary</item>
        <item name="android:colorPrimary">@color/colorPrimary</item>
        <item name="android:colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:colorAccent">@color/colorAccent</item>
    </style>

    <style name="SetupTheme" parent="@android:style/Theme.Material.Light.NoActionBar.Fullscreen" >
        <item name="android:windowContentTransitions">true</item>
        <item name="android:navigationBarColor">@color/colorPrimary</item>
        <item name="android:colorPrimary">@color/colorPrimary</item>
        <item name="android:colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:colorAccent">@color/colorAccent</item>
    </style>

    <style name="PopupMenu" parent="@android:style/Widget.PopupMenu" >
        <item name="android:clickable">true</item>
        <item name="android:popupBackground">@drawable/res_float_menu</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="PopupMenuTextAppearanceSmall" parent="@android:style/TextAppearance.DeviceDefault.Widget.PopupMenu.Small">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="PopupMenuTextAppearanceLarge" parent="@android:style/TextAppearance.DeviceDefault.Widget.PopupMenu.Large">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="LauncherShowcaseTheme" parent="ShowcaseView.Light">
        <item name="sv_backgroundColor">#EA000000</item>
        <item name="sv_showcaseColor">@android:color/holo_blue_light</item>
        <item name="sv_detailTextAppearance">@style/LauncherShowcaseText</item>
        <item name="sv_buttonText">关闭</item>
    </style>

    <style name="LauncherShowcaseText" parent="TextAppearance.ShowcaseView.Detail.Light">
        <item name="android:textColor">#8affffff</item>
    </style>

    <style name="RolePackInstallTheme" parent="SetupTheme">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:navigationBarColor">@android:color/darker_gray</item>
    </style>
    
</resources>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <ImageView
        android:layout_width="33dp"
        android:layout_height="33dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/res_setup_wizard"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="了解立绘包"
        android:textColor="#000000"
        android:textSize="25dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="全新的立绘包功能将会替代过去的从相册选择自定义立绘，扩展立绘就和安装主题一样简单。你可以通过互联网获取立绘包。\n\n如欲了解更多，请点击下面的 详情 按钮。"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_read_more"
            android:textColor="@color/colorAccent"
            android:layout_marginTop="8dp"
            android:onClick="packDetail"/>

    </LinearLayout>

    <Button
        android:layout_width="200dp"
        android:layout_height="43dp"
        android:layout_gravity="center"
        android:background="@drawable/res_button"
        android:elevation="3dp"
        android:text="@string/app_continue"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="8dp"
        android:onClick="nextClickPack"/>

</LinearLayout>
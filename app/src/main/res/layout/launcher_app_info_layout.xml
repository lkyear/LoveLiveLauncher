<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimary"/>

    <LinearLayout
        android:id="@+id/launcher_pref_user_info_head_layout"
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/res_card"
        android:clickable="true"
        android:elevation="3dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/launcher_app_info_iv_icon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_margin="8dp"
            android:src="@drawable/res_about_icon"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/launcher_app_info_tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="3dp"
                android:text="LoveLive桌面"
                android:textColor="@android:color/black"
                android:textSize="20dp"
                android:gravity="start|bottom"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/launcher_app_info_tv_version_name_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start|top"
                    android:text="版本：10.5.0"
                    android:textSize="11dp" />

                <TextView
                    android:id="@+id/launcher_app_info_tv_package_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start|top"
                    android:text="com.lkyear.llauncher"
                    android:textSize="11dp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        android:layout_below="@+id/launcher_pref_user_info_head_layout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/res_card"
                android:clickable="true"
                android:elevation="3dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="应用操作"
                    android:textColor="@android:color/black"
                    android:textSize="14dp"
                    android:layout_margin="13dp"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:layout_marginRight="13dp"
                    android:layout_marginLeft="13dp"
                    android:background="@android:color/darker_gray" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/launcher_app_info_bt_detail"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="?android:attr/selectableItemBackground"
                        android:textColor="@color/colorAccent"
                        android:gravity="center"
                        android:text="信息页面"
                        android:textSize="14dp"/>

                    <RelativeLayout
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:background="@android:color/darker_gray"/>

                    <TextView
                        android:id="@+id/launcher_app_info_bt_uninstall"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="?android:attr/selectableItemBackground"
                        android:textColor="@color/colorAccent"
                        android:gravity="center"
                        android:text="卸载应用"
                        android:textSize="14dp"/>

                    <RelativeLayout
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:background="@android:color/darker_gray"/>

                    <TextView
                        android:id="@+id/launcher_app_info_bt_force_close"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="?android:attr/selectableItemBackground"
                        android:textColor="@color/colorAccent"
                        android:gravity="center"
                        android:text="强制退出"
                        android:textSize="14dp"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@drawable/res_card"
                android:clickable="true"
                android:elevation="3dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="包信息"
                    android:textColor="@android:color/black"
                    android:textSize="14dp"
                    android:layout_margin="13dp"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:layout_marginRight="13dp"
                    android:layout_marginLeft="13dp"
                    android:background="@android:color/darker_gray" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp">

                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:gravity="end|center"
                        android:text="版本号 :" />

                    <TextView
                        android:id="@+id/launcher_app_info_tv_version_code"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:gravity="start|center"
                        android:textColor="@android:color/black"
                        android:text="6666"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="6dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp">

                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:gravity="end|center"
                        android:text="目标平台 :" />

                    <TextView
                        android:id="@+id/launcher_app_info_tv_target_api"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:gravity="start|center"
                        android:textColor="@android:color/black"
                        android:text="API 25"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="6dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp">

                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:gravity="end|center"
                        android:text="内嵌 :" />

                    <TextView
                        android:id="@+id/launcher_app_info_tv_embedded"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:gravity="start|center"
                        android:textColor="@android:color/black"
                        android:text="否"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="6dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp">

                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:gravity="end|center"
                        android:text="首次安装 :" />

                    <TextView
                        android:id="@+id/launcher_app_info_tv_first_install"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:gravity="start|center"
                        android:textColor="@android:color/black"
                        android:text="Sun May 15 17:41:15 GMT+08:00 2016"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="6dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp">

                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:gravity="end|center"
                        android:text="最后更新 :" />

                    <TextView
                        android:id="@+id/launcher_app_info_tv_last_update"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:gravity="start|center"
                        android:textColor="@android:color/black"
                        android:text="Sun May 15 17:41:15 GMT+08:00 2016"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="6dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="match_parent"
                        android:gravity="end|top"
                        android:text="包路径 :" />

                    <TextView
                        android:id="@+id/launcher_app_info_tv_location"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:gravity="start|top"
                        android:textColor="@android:color/black"
                        android:text="/data/app/com.lkyear.lllauncher-2/base.apk"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@drawable/res_card"
                android:clickable="true"
                android:elevation="3dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="权限信息"
                    android:textColor="@android:color/black"
                    android:textSize="14dp"
                    android:layout_margin="13dp"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:layout_marginRight="13dp"
                    android:layout_marginLeft="13dp"
                    android:background="@android:color/darker_gray" />

                <TextView
                    android:id="@+id/launcher_app_info_tv_permission"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginBottom="8dp"
                    android:text="android.permission.WRITE_SETTINGS\nandroid.permission.SYSTEM_ALERT_WINDOW\nandroid.permission.WAKE_LOCK\nandroid.permission.WRITE_SETTINGS\nandroid.permission.SYSTEM_ALERT_WINDOW\nandroid.permission.WAKE_LOCK\nandroid.permission.WRITE_SETTINGS\nandroid.permission.SYSTEM_ALERT_WINDOW\nandroid.permission.WAKE_LOCK\nandroid.permission.WRITE_SETTINGS\nandroid.permission.SYSTEM_ALERT_WINDOW\nandroid.permission.WAKE_LOCK\nandroid.permission.WRITE_SETTINGS\nandroid.permission.SYSTEM_ALERT_WINDOW\nandroid.permission.WAKE_LOCK\n"
                    android:textColor="@android:color/black" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>
</RelativeLayout>